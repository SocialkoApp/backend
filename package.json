    "webpack": "^5.76.0"
  },
  "devDependencies": {
    "@mermaid-js/mermaid-cli": "^10.0.2",
    "@nestjs/cli": "^9.2.0",
    "@nestjs/schematics": "^9.0.4",
    "@nestjs/testing": "^9.3.9",
    "@types/express": "^4.17.17",
    "@types/jest": "29.4.0",
    "@types/multer": "^1.4.7",
    "@types/node": "^18.15.0",
